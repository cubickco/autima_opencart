<div class="mini_cart_wrapper">
    <a href="javascript:void(0)">
         <span class="lnr lnr-cart"></span> My Cart 
    </a>
    <span class="cart_quantity">{{ text_items }}</span>
    <!--mini cart-->
 
            <div class="mini_cart">
               {% if products or vouchers %}
        {% for product in products %}
                <div class="cart_item">
                    <div class="cart_img">
                        {% if product.thumb %}
                            <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail"/></a>
                        {% endif %}
                    </div>
                    <div class="cart_info">
                        <a href="{{ product.href }}">{{ product.name }}</a>

                        <span class="quantity">x
                            {{ product.quantity }}</span>
                        <span class="price_cart">{{ product.total }}</span>

                    </div>
                    <div class="cart_remove" >
                        <a onclick="cart.remove('{{ product.cart_id }}');" title="{{ button_remove }}">
                            <i class="fa fa-close"></i>
                        </a>
                    </div>
                </div>
                            {% endfor %}
        {% endif %}
                {% for total in totals %}
                    <div class="mini_cart_table">
                        <div class="cart_total mt-10">
                            <span>{{ total.title }}:</span>
                            <span class="price">{{ total.text }}</span>
                        </div>
                    </div>
                {% endfor %}


        <div class="mini_cart_footer">
            <div class="cart_button">
                <a href="{{ cart }}">View cart</a>
            </div>
            <div class="cart_button">
                <a href="{{ checkout }}">Checkout</a>
            </div>

        </div>

    </div>

    <!--mini cart end-->
</div>
